<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cart_fragment_shopping_list_item_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_remove_gray" />

    </RelativeLayout>

    <TextView
        android:id="@+id/cart_fragment_shopping_list_item_main_quantity_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/cart_fragment_shopping_list_item_optional_quantity_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/cart_fragment_shopping_list_item_bio_or_cheapest_or_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:textColor="@color/quantum_lightgreen900"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold" />

</LinearLayout>

